# API Configuration
NEXT_PUBLIC_API_BASE_URL=http://localhost:5005
NEXT_PUBLIC_API_TIMEOUT=10000

# Environment
NODE_ENV=development

# Application Configuration
NEXT_PUBLIC_APP_NAME=TierTrade
NEXT_PUBLIC_APP_VERSION=1.0.0

# API Endpoints (if different from base URL)
NEXT_PUBLIC_PRODUCTS_ENDPOINT=/products
NEXT_PUBLIC_THEMES_ENDPOINT=/themes
NEXT_PUBLIC_CATEGORIES_ENDPOINT=/categories
NEXT_PUBLIC_TIERS_ENDPOINT=/tiers
NEXT_PUBLIC_AUTHORS_ENDPOINT=/authors

# Pagination Defaults
NEXT_PUBLIC_DEFAULT_PAGE_SIZE=10
NEXT_PUBLIC_MAX_PAGE_SIZE=100

# Authentication (if needed in the future)
# NEXT_PUBLIC_AUTH_ENABLED=false
# NEXTAUTH_SECRET=your-secret-key-here
# NEXTAUTH_URL=http://localhost:3000

# Database (if needed in the future)
# DATABASE_URL=your-database-url-here

# External Services (if needed)
# NEXT_PUBLIC_ANALYTICS_ID=your-analytics-id
# NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Feature Flags
NEXT_PUBLIC_ENABLE_FAVORITES=true
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_FILTERING=true
NEXT_PUBLIC_ENABLE_SORTING=true

# Development
NEXT_PUBLIC_DEBUG_MODE=true
NEXT_PUBLIC_LOG_LEVEL=debug

# Build Configuration
ANALYZE=false
BUNDLE_ANALYZE=false
